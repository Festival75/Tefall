        +mainNavItem('Мебель')
        +mainNavItem('Бытовая техника')
        +mainNavItem('Хранение вина')
        +mainNavItem('Посуда')
        +mainNavItem('Ножи')
        +mainNavItem('Бар и хрусталь')
        +mainNavItem('Сервировка')
        +mainNavItem('Кухонная утварь')
        +mainNavItem('Текстиль')
    .header-search
        +icon('search')