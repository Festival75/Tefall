header
  background-color black

  .container
    position relative
    width 100%
    max-width 1140px
    margin 0 auto
    display flex
    align-items flex-end

.header-logo
  margin-right 60px

.header-nav
  display flex
  align-items flex-end
  flex 1
  justify-content space-between
  padding-bottom 30px

.icon-logo
  fill #fff
  size(240px, 130px)

.header_nav__item
  margin-bottom 10px
  .icon
    fill #fff
    size(17px)
    margin-right 10px

  &:last-child
    margin-bottom 0

.header-nav__link
  color #fff
  font-size rem(15)
  border-bottom 1px solid #ccc

  &.header__phone
    font-size rem(20)
    border-bottom 0

  &.header-nav__link--user
    display block

.header-nav__user
  display flex

  .icon
    fill #fff
    size(30px)
    margin-bottom 15px

.header_nav--user__item
  text-align center
  margin-left 25px

  &:first-child
    margin-left 45px

.header-nav__user--icon
  position relative

.header-nav__user--count
  absolute($top:-10px,$right:8px)
  display block
  size 20px
  padding-top 4px
  border-radius 50%
  background-color redColor
  color #ffffff
  font-size rem(12)